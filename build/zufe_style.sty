\ProvidesPackage{zufe_style}

% 宏包加载和格式设置
\RequiredPackage{graphicx} % Required for inserting images
\RequiredPackage{amsmath, amsthm, amssymb} % Math
\RequiredPackage{wasysym} % Greek alphabets
\RequiredPackage{unicode-math} % Greek alphabets, 替换MnSymbol. NOTE: 但只能在xelatex或者lualatex中使用
\RequiredPackage{mathrsfs, amsfonts} % Math fonts
\RequiredPackage{hyperref} % 引用链接
\RequiredPackage{listings} % 代码输入
\RequiredPackage{fancyhdr} % 引入fancyhdr宏包来控制页眉页脚
\RequiredPackage{titlesec} % 定制章节标题样式
\RequiredPackage{caption} % Optional, for caption customization
\RequiredPackage{xcolor} % color
\RequiredPackage{booktabs} % 使用booktabs表格形式
\RequiredPackage{tabularx} % 在表格中制造换行
\RequiredPackage{etoolbox} % 脚注通篇连续编号
\RequiredPackage{xeCJK} % 中文排版，控制字体
\RequiredPackage{fontspec} % 通用字体控制
\RequiredPackage[authoryear]{natbib} % 为了gbt7714加载natlib
\RequiredPackage{enumitem} % 增强列表功能

% 设置PDF文档语言为简体中文
\hypersetup{pdflang = zh-CN}

% 设置列表样式
\setlist{nosep} % 去除列表项之间的额外间距

% 设置 caption 与 figure 之间的距离
\setlength{\abovecaptionskip}{11pt}
\setlength{\belowcaptionskip}{9pt}

% 设置图片的 caption 格式
\renewcommand{\thefigure}{\thesection-\arabic{figure}}
\captionsetup[figure]{font=small,labelsep=space}

% 设置表格的 caption 与 table 之间的垂直距离
\captionsetup[table]{skip=2pt}

% 设置表格的 caption 格式
\renewcommand{\thetable}{\thesection-\arabic{table}}
\captionsetup[table]{font=small,labelsep=space}

% 设置chapter标题格式
\titleformat{\chapter}[block]
{\centering\zihao{3}\heiti} % 居中、三号、黑体
{\thechapter}
{1em}
{}
[\vspace{1ex}] % 段后空1行

% 设置chapter标题的前后间距
\titlespacing{\chapter}
{0pt} % 左边距
{1ex} % 段前空1行  
{1ex} % 段后空1行

% 重新定义section标题格式
\titleformat{\section}[hang]  % hang表示标题采用悬挂式样式
{\heiti\zihao{4}\raggedright}  % 黑体、四号、左对齐
{\thesection}{1em}{}  % 编号与标题间距1em

% 设置section标题的前后间距
\titlespacing{\section}
{0pt}  % 左边距
{1ex}  % 段前空1行
{1ex}  % 段后空1行

% 重新定义subsection标题格式
\titleformat{\subsection}[hang]  % hang表示标题采用悬挂式样式
{\heiti\zihao{-4}\raggedright}  % 黑体、小四号、左对齐
{\thesubsection}{1em}{}  % 编号与标题间距1em

% 设置subsection标题的前后间距
\titlespacing{\subsection}
{0pt}  % 左边距
{1ex}  % 段前空1行
{1ex}  % 段后空1行

% 脚注通篇连续编号
\counterwithout{footnote}{chapter}

% 添加首行缩进，两个字符
\RequiredPackage{indentfirst}
\setlength{\parindent}{2em}

% 设置行距
\renewcommand{\baselinestretch}{1.0}
\setlength{\parskip}{0pt}
\linespread{1.5}  % 固定行距20磅约等于1.5倍行距

% 避免出现所有作者名字
\RequiredPackage[authoryear,etalmode=truncate,etaltext=it]{gbt7714}

% 设置页眉样式
\pagestyle{fancy}
\fancyhf{} % 清空默认页眉页脚
\fancyhead[C]{浙江财经大学硕士毕业论文}
\fancyfoot[C]{\thepage} % 居中显示页码